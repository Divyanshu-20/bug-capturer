{
  "manifest_version": 3,
  "name": "Bug Capturer Extension",
  "version": "1.0.0",
  "description": "Local-only bug capture tool for testing - no external network calls",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["html2canvas.min.js", "content-script.js"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [
    {
      "resources": ["html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "controller.html",
    "default_title": "Bug Capturer Controller"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}